{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "baseBranchPatterns": [
        "main"
    ],
    "packageRules": [
        {
            "description": "Update Dockerfile base image",
            "matchManagers": [
                "dockerfile"
            ],
            "matchPackageNames": [
                "registry.redhat.io/amq-streams/kafka-41-rhel9"
            ],
            "versioning": "redhat",
            "automerge": true
        },
        {
            "description": "Automerge Tekton manager updates",
            "matchManagers": [
                "tekton"
            ],
            "automerge": true
        }
    ]
}
